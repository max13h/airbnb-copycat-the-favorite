<h1>Add a new Lens</h1>

<%= form_for @lens do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :lens_type %>
    <%= f.text_area :lens_type %>
  </div>
    <div class="form-group">
    <%= f.label :price %>
    <%= f.text_area :price %>
  </div>
    <div class="form-group">
    <%= f.label :location %>
    <%= f.text_area :location %>
  </div>
  <div class="btn btn-primary">
    <%= f.submit 'Create Lens' %>
  </div>
<% end %>

