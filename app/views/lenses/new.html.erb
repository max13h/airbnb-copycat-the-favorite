<div class="container">
  <h1 class="fw-bold my-5">Add a new Lens</h1>

  <%= simple_form_for(@lens, html: {class: "d-flex align-items-center flex-column"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { class: "bg-white" }%>
      <%= f.input :lens_type,
                  required: true,
                  autofocus: true,
                  input_html: { class: "bg-white" }%>
      <%= f.input :price,
                  required: true,
                  autofocus: true,
                  input_html: { class: "bg-white" }%>
      <%= f.input :location,
                  required: true,
                  autofocus: true,
                  input_html: { class: "bg-white" }%>
      <%= f.input :image,
                  required: true,
                  autofocus: true,
                  input_html: { class: "bg-white" }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-outline-primary" %>
    </div>
  <% end %>

