<h1><%= @lens.name %></h1>

<div class="lens-details">
  <div class="detail">
    <p>
      <strong>Name:</strong> <%= @lens.name %>
    </p>
  </div>
  <div class="detail">
    <p>
      <strong>Type:</strong> <%= @lens.lens_type %>
    </p>
  </div>
  <div class="detail">
    <p>
      <strong>Price:</strong> <%= number_to_currency(@lens.price, unit: 'â‚¬') %>
    </p>
  </div>
  <div class="detail">
    <p>
      <strong>Owner: </strong> <%= @lens.user.first_name %> <%= @lens.user.last_name %>
    </p>
  </div>
  <div class="detail">
    <p>
      <strong>Camera compatibility: </strong><%= @lens.camera.brand %> <%= @lens.camera.model %>
    </p>
  </div>
</div>

<h2>Is this lens avaiable?</h2>
<% if @lens.bookings.any? %>
  <div class="bookings">
    <% @lens.bookings.each do |booking| %>
      <div class="booking">
        <div class="detail">
          <strong>Booked from:</strong> <%= booking.start_date %>
        </div>
        <div class="detail">
          <strong>to:</strong> <%= booking.end_date %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No reservation for this lens.</p>
<% end %>

<%= link_to 'Back to all', lenses_path %>
