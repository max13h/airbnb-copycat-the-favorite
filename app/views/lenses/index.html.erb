<div class="container">
  <h1 class="">Lenses to rent</h1>

<div class="row gy-5 gx-5">
  <% @lenses.each do |lens| %>
    <%= link_to lense_path(lens), class: "col" do %>
      <div class="lens-card shadow-sm">
        <%= cl_image_tag lens.image.key, crop: :fill, class: "object-fit-fill w-100 p-3" %>
        <h5 class="card-title fw-bold"><%= lens.name %></h5>
        <div class="lens-details">
        <p class="card-text"><%= lens.lens_type %></p>
        <p class="card-text"><%= "#{lens.price}â‚¬" %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<%= link_to 'Add my Lens', new_lense_path %>
