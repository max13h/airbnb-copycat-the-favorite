<nav class="d-flex justify-content-between align-items-center p-2 global-navbar shadow-sm">
  <%= link_to root_path, class: "ms-5"  do %>
    <%= image_tag("airbnb-copyat-logo.svg") %>
  <% end %>

  <%= form_with url: "/search", method: :get, class: "flex-grow-1 mx-5 d-flex justify-content-center align-items-center" do |form| %>
    <%= form.text_field(:query, placeholder: 'Search for a lens', class: "w-100 rounded-pill py-1 px-2", style: "max-width: 500px") %>
  <% end %>

  <div class="d-flex justify-content-center align-items-center me-5">
    <% if user_signed_in? %>
      <div class="" id="navbarSupportedContent">
        <div class="navbar-nav me-auto ">
          <i class="ri-user-smile-line fs-2 hover-effect" id="navbarDropdown" data-bs-toggle="dropdown", aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Profil", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
          </div>
        </div>
      </div>
    <% else %>
    <%= link_to "Add my lens", '/', class: "navbar-label" %>
      <div class="connect-btn me-3">
        <%= link_to "Sign Up", new_user_registration_path, class: "navbar-label" %>
        <%= link_to "Login", new_user_session_path, class: "navbar-label" %>
      </div>
    <% end %>
  </div>
</nav>
